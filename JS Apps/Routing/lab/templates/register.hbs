<section id="register">
    <div class="container centered">
        <div class="box">
            <h1>Register</h1>
            <div class="content">
                <form id="register-form" action="#/register" method="post">
                    <label for="newUsername">Username</label>
                    <input name="username" id="newUsername" type="text">
                    <label for="newPassword">Password</label>
                    <input name="password" id="newPassword" type="password">
                    <label for="newPassRep">Repeat Password</label>
                    <input name="rePassword" id="newPassRep" type="password">
                    <label for="firstName">First name</label>
                    <input name="firstName" id="firstName" type="text">
                    <label for="lastName">Last name</label>
                    <input name="lastName" id="lastName" type="text">
                    <label for="phone">Phone</label>
                    <input name="phone" id="phone" type="number">
                    <label for="email">Email</label>
                    <input name="email" id="email" type="email">
                    <input type="submit" value="Register">
                </form>
            </div>
        </div>
    </div>
</section>